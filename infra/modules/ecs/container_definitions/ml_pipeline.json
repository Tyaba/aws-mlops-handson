[
    {
        "name": "ml-pipeline",
        "image": "${ml_pipeline_ecr_uri}:latest",
        "cpu": 1024,
        "memory": 2048,
        "portMappings": [],
        "essential": true,
        "command": [
            "python",
            "-m",
            "ml.main"
        ],
        "environment": [
            {
                "name": "VERSION",
                "value": "2024-05-14"
            },
            {
                "name": "MODEL",
                "value": "sgd_classifier_ctr_model"
            },
            {
                "name": "AWS_BUCKET",
                "value": "${bucket}"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-create-group": "true",
                "awslogs-group": "/ecs/mlops-handson-ml-pipeline",
                "awslogs-region": "ap-northeast-1",
                "awslogs-stream-prefix": "ecs"
            }
        }
    }
]